#!/bin/bash
sudo systemctl daemon-reload
sleep 3
{{ range .units.system -}}
sudo systemctl enable --now {{ . }} || true
{{ end -}}

systemctl --user daemon-reload
sleep 3
{{ range .units.user_base }}
systemctl --user enable --now {{ . }} || true
{{ end }}
{{ if ne .chassisType "container" }}
{{ range .units.user_desktop -}}
systemctl --user enable --now {{ . }} || true
{{ end }}
{{ end }}